<%-include("includes/head") %>
    <link rel="stylesheet" href="./styles/landing.css">
</head>

<style>
    footer{
        position: relative;
        top: 5.5rem;
    
    }
</style>

<body>
    <%- include("includes/header") %>
    <div class="card">           
            <h1>Login</h1>
            <% if(input.hasError) { %>
                <div class="Invalid">
                    <h5>Invalid data</h5>
                    <p>please enter valid input credentials</p>
                </div>
            <% } %>
            <form action="/login" method="post">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <div class="form-group">
                    <label for="exampleInputEmail1">Email address</label>
                    <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                        placeholder="Enter email" name="email" value="<%= input.email %>">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" name="password" value="<%=input.password %>">
                </div>
                <!-- <div class="form-check">
                <input type="checkbox" class="form-check-input" id="exampleCheck1">
                <label class="form-check-label" for="exampleCheck1">Check me out</label>
            </div> -->
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
    </div>
    <%-include("includes/footer")%>
</body>
</html>